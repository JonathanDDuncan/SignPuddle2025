using Xunit;
using System.Security.Cryptography;
using System.Text;

namespace SignPuddle.API.Tests.Unit
{
    public class HashGUIDTests
    {
        [Fact]
        public void IdFromHash_ProducesConsistentGuids()
        {
            // Arrange
            var input = "test-string";
            
            // Act
            var result1 = IdFromHash(input);
            var result2 = IdFromHash(input);

            // Assert
            Assert.Equal(result1, result2);
        }

        public string IdFromHash(string str)
        {
            using var sha256 = SHA256.Create();
            var hashBytes = SHA256.HashData(Encoding.UTF8.GetBytes(str));
            var guid = new Guid(hashBytes.Take(16).ToArray());
            return guid.ToString();
        }
    }
}